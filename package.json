{
  "name": "moverz-hub",
  "version": "1.0.0",
  "private": true,
  "description": "Moverz - Comparateur de devis de déménageurs (Hub National)",
  "scripts": {
    "prebuild": "tsx --tsconfig tsconfig.json scripts/generate-city-guides.ts",
    "dev": "next dev -p 3040",
    "build": "next build",
    "start": "next start -p 3040",
    "lint": "next lint",
    "test": "vitest run",
    "blog:pro:gen": "tsx scripts/generate-blog-pro.ts",
    "seo:inventory": "tsx scripts/seo-inventory.ts > seo-inventory.csv",
    "seo:healthcheck": "tsx scripts/seo-healthcheck.ts",
    "seo:city-guides-wordcount": "tsx scripts/seo-city-guides-wordcount.ts > seo-city-guides-wordcount.csv",
    "update-llm": "node scripts/update-llm-files.mjs",
    "seo:monitor": "node scripts/gsc-monitor.mjs",
    "seo:monitor:weekly": "node scripts/gsc-monitor.mjs --days 7",
    "seo:monitor:monthly": "node scripts/gsc-monitor.mjs --days 28"
  },
  "dependencies": {
    "@types/qrcode": "^1.5.6",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.25",
    "googleapis": "^171.4.0",
    "lucide-react": "^0.453.0",
    "next": "^14.2.6",
    "next-sitemap": "^4.2.3",
    "nodemailer": "^7.0.12",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.5",
    "tailwind-merge": "^2.5.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "20.19.18",
    "@types/react": "19.1.13",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.21.0",
    "typescript": "5.9.2",
    "vitest": "^4.0.16"
  }
}
